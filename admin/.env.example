# =================================================================
# TrueAstroTalk - Unified Environment Configuration
# =================================================================
# Copy this file to .env and fill in your values
# This single file works for both development and production
# Environment is auto-detected based on NODE_ENV or domain

# =================================================================
# ENVIRONMENT DETECTION
# =================================================================
APP_ENVIRONMENT=local
# Options: local | production

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
MONGODB_URL=mongodb://localhost:27017
# For production: mongodb://username:password@host:port or MongoDB Atlas connection string
DB_NAME=trueastrotalkDB

# =================================================================
# JWT & AUTHENTICATION
# =================================================================
JWT_SECRET=your_jwt_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here
SESSION_SECRET=your_session_secret_here

# =================================================================
# APP URLS (Auto-detects local vs production based on APP_ENVIRONMENT)
# =================================================================
# Single URL configuration - system auto-detects local/production defaults
# Only override if you need custom URLs
NEXTAUTH_URL=http://localhost:4000
# Leave empty for auto-detection: http://localhost:4000 (local) OR https://www.trueastrotalk.com (production)

API_BASE_URL=http://localhost:4000/api
# Leave empty for auto-detection: http://localhost:4000/api (local) OR https://www.trueastrotalk.com/api (production)

# =================================================================
# SERVER CONFIGURATION
# =================================================================
PORT=4000
# Production might use 80, 443, or process.env.PORT

# =================================================================
# FILE UPLOAD CONFIGURATION
# =================================================================
UPLOAD_DIR=public/uploads
MAX_FILE_SIZE=5242880
# 5MB in bytes

# =================================================================
# RAZORPAY CONFIGURATION
# =================================================================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# =================================================================
# EMAIL CONFIGURATION
# =================================================================
SEND_FROM=info@trueastrotalk.com
SENDGRID_API_KEY=your_sendgrid_api_key

# =================================================================
# BUSINESS CONFIGURATION
# =================================================================
DEFAULT_COMMISSION_RATE=0.25
# 25% platform commission
MINIMUM_PAYOUT_THRESHOLD=1000
# â‚¹1000 minimum for payouts

# =================================================================
# CORS & SECURITY (Auto-detects based on APP_ENVIRONMENT)
# =================================================================
# Single CORS configuration - system auto-detects local/production defaults
# Only override if you need custom CORS settings
ALLOWED_ORIGINS=
# Leave empty for auto-detection: localhost URLs (local) OR trueastrotalk.com URLs (production)

# =================================================================
# LOGGING CONFIGURATION (Auto-detects based on APP_ENVIRONMENT)
# =================================================================
# Single log level - system auto-detects local/production defaults
# Only override if you need custom log level
LOG_LEVEL=
# Leave empty for auto-detection: debug (local) OR info (production)

# =================================================================
# FUTURE FEATURES (Currently not implemented)
# =================================================================
# Uncomment when implementing these features:
# FIREBASE_SERVER_KEY=your_firebase_server_key  # For push notifications
# GOOGLE_CLIENT_ID=your_google_oauth_client_id  # For Google login
# GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret  # For Google login