{
  "extends": [
    "next/core-web-vitals",
    "@next/eslint-config-next"
  ],
  "rules": {
    // Keep strict rules for code quality
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-require-imports": "error",
    
    // Keep important security and correctness rules as errors
    "no-unused-expressions": "error",
    "no-unreachable": "error",
    "no-constant-condition": "error",
    "no-duplicate-keys": "error",
    "prefer-const": "error",
    
    // React/Next.js specific rules
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "@next/next/no-css-tags": "error",
    "@next/next/no-img-element": "error",
    
    // Allow console statements (useful for server-side logging)
    "no-console": "off",
    
    // Allow empty catch blocks (sometimes needed for fallback handling)
    "no-empty": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}