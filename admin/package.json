    "air-datepicker": "^3.6.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "bootstrap": "^4.6.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.4.0",
    "flatpickr": "^4.6.13",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jose": "^6.0.12",
    "jquery": "^3.7.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "next": "15.4.2",
    "next-auth": "^4.24.11",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.10.1",
    "punycode": "^2.3.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-flatpickr": "^4.0.11",
