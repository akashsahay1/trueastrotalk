{
  "name": "admin",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "dev:next": "next dev",
    "dev:socket": "node socket-server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:socket\"",
    "build": "echo '⚠️ Note: Punycode warnings are expected with Node.js 23+ and Next.js 15. Consider using Node.js 22 LTS.' && next build",
    "start": "NODE_ENV=production node server.js",
    "start:next": "next start",
    "start:socket": "NODE_ENV=production node socket-server.js",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "@types/node-cron": "^3.0.11",
