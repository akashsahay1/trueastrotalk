# True Astro Talk - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# API Configuration
API_BASE_URL=http://localhost:3000/api
API_BASE_URL_PRODUCTION=https://www.trueastrotalk.com/api
SOCKET_URL=http://localhost:3000
SOCKET_URL_PRODUCTION=https://www.trueastrotalk.com

# Environment Mode (development, staging, production)
APP_ENVIRONMENT=development

# Firebase Configuration (get these from Firebase Console)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_APP_ID_ANDROID=your_android_app_id
FIREBASE_APP_ID_IOS=your_ios_app_id
FIREBASE_API_KEY_ANDROID=your_android_api_key
FIREBASE_API_KEY_IOS=your_ios_api_key
FIREBASE_SENDER_ID=your_sender_id

# Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id

# Platform specific settings
ENABLE_NETWORK_LOGGING=true