<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/astrologer_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/border_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Profile Section -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/astrologer_profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Astrologer Profile"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Online Indicator -->
            <View
                android:id="@+id/online_indicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignEnd="@id/astrologer_profile_image"
                android:layout_alignBottom="@id/astrologer_profile_image"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle_success"
                android:visibility="gone" />

        </RelativeLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name and Rating Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/astrologer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dr. Rajesh Kumar"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/astrologer_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge_warning"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="⭐ 4.8"
                    android:textColor="@color/warning"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Specialization -->
            <TextView
                android:id="@+id/astrologer_specialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Vedic, Numerology"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Languages and Experience Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/astrologer_languages"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hindi, English"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/astrologer_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 years exp"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Rate and Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/astrologer_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₹25/min"
                    android:textColor="@color/success"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chat_button"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:minWidth="60dp"
                    android:text="Chat"
                    android:textSize="12sp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_chat"
                    app:iconGravity="start"
                    app:iconSize="14dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/call_button"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:minWidth="60dp"
                    android:text="Call"
                    android:textSize="12sp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_call"
                    app:iconGravity="start"
                    app:iconSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>