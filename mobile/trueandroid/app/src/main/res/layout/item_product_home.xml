<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_card"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/border_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Product Image Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_100"
                android:contentDescription="Product Image"
                android:padding="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_shopping"
                android:tint="@color/primary" />

            <!-- Discount Badge -->
            <TextView
                android:id="@+id/discount_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:background="@drawable/badge_error"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="20% OFF"
                android:textColor="@color/error"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

        <!-- Product Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Name -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Rudraksha Mala"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Category -->
            <TextView
                android:id="@+id/product_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Spiritual Items"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <!-- Stock Badge -->
            <TextView
                android:id="@+id/stock_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/badge_success"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="In Stock"
                android:textColor="@color/success"
                android:textSize="10sp"
                android:textStyle="bold" />

            <!-- Price Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_discounted_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹499"
                        android:textColor="@color/success"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/product_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹599"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Add to Cart Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_to_cart_button"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:text="Add to Cart"
                android:textSize="12sp"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_add"
                app:iconGravity="start"
                app:iconSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>